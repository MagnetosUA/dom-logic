{% extends '@Main/base.html.twig' %}
{% block main_content %}
    <div class="col-md-9 text-left">
        <form class="form-horizontal" action="{{ path('main_successdevice') }}" method="get">
            <div class="form-group">
                <label for="mail" class="col-sm-2 control-label">Название устройства</label>
                <div class="col-sm-10">
                    <input type="text" name = "name" class="form-control" id="mail" placeholder="Название устройства">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Тип</label>
                <div class="col-sm-10">
                    <input type="text" name="type" class="form-control" id="pass" placeholder="Тип">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Персональный ID</label>
                <div class="col-sm-10">
                    <input type="text" name="personal_id" class="form-control" id="pass" placeholder="Персональный ID">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Статус</label>
                <div class="col-sm-10">
                    <input type="text" name="status" class="form-control" id="pass" placeholder="Статус">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Добавить</button>
                </div>
            </div>
        </form>
    </div>

{% endblock main_content %}