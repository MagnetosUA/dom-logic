{% extends '@Main/base.html.twig' %}
{% block main_content %}
   <div class="col-md-9 text-left">
        <form class="form-horizontal" action="{{ path('main_successroom') }}" method="get">
            <div class="form-group">
                <label for="mail" class="col-sm-2 control-label">Название комнаты</label>
                <div class="col-sm-10">
                    <input type="text" name = "name" class="form-control" id="mail" placeholder="Название комнаты">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Датчик</label>
                <div class="col-sm-10">
                    <input type="text" name="sensor" class="form-control" id="pass" placeholder="Датчик">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Управляемое устройство</label>
                <div class="col-sm-10">
                    <input type="text" name="device" class="form-control" id="pass" placeholder="Управляемое устройство">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Ссылка на изображение</label>
                <div class="col-sm-10">
                    <input type="text" name="link_to_image" class="form-control" id="pass" placeholder="Ссылка на изображение">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Добавить</button>
                </div>
            </div>
        </form>
    </div>

{% endblock main_content %}